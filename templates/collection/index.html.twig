{% extends 'svg/_svg_global.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <section id="collection-body">
        <div id="test" class="contributors-contain">
            <h2 class="contributors-h2">Contributors</h2>
            <ul class="contributors d-flex">
                <li>
                    <a class="btn modal-btn" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                        {{ block('modal') }}
                        <p class="modal-text">add a new contributor</p>
                    </a>
                </li>
                {% for i in 0..9 %}
                    <li class="contributor d-flex">
                        <a href="">
                            {{ block('delete') }}
                        </a>
                        <img class="contributor-flag" src="https://via.placeholder.com/17x12 " alt="">
                        <div class="contributor-1">
                            <img class="contributor-thumbnail" src="https://via.placeholder.com/40x40" alt="">
                        </div>
                        <div class="contributor-2">
                            <p class="contributor-name">Farrell-Shey974</p>
                            <p><span>Contributor since  <br> 1 November 2020</span></p>
                        </div>
                    </li>
                {% endfor %}
            </ul>
            <div class="d-flex justify-content-center">
                <button class="btn btn-no-bg" onclick="getElementById('test').classList.toggle('open')">
                    {{ block('arrow') }}
                </button>
            </div>
        </div>
        <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
             aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <section class="modal-content modal-dialog" id="modal-body">
                <div class="modal-contain">
                    <div class="d-flex justify-content-end">
                        <a class="btn-close btn" data-bs-dismiss="modal">Close</a>
                    </div>
                    <form class="search-bar" action="">
                        <input class=" form-control" type="text" placeholder="Search user">
                        <button class="btn btn-search" type="submit">
                            {{ block("search") }}
                        </button>
                    </form>
                    <ul class="modal-list">
                        {% for i in 0..3 %}
                            <li class="modal-card">
                                <img class="modal-thumbnail" src="https://via.placeholder.com/20x20" alt="">
                                <img class="modal-flag" src="https://via.placeholder.com/14x9" alt="">
                                <p>Filsdelama</p>
                            </li>
                        {% endfor %}
                    </ul>
                    <div class="modal-add">
                        <p>You want to add :</p>
                        <div class="btn-contain">
                            <div class="btn btn-add">
                                <p>Trace12</p>
                                <a>
                                    {{ block('cross') }}
                                </a>
                            </div>
                            <div class="btn btn-add">
                                <p>Nireko</p>
                                <a>
                                    {{ block('cross') }}
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="btn-confirm-contain d-flex justify-content-end">
                        <a class="btn btn-confirm">Confirm</a>
                    </div>
                </div>
            </section>
        </div>
    </section>
{% endblock %}
