{% extends 'base.html.twig' %}

{% block title %}PoolSet index{% endblock %}

{% block body %}
    <h1>PoolSet index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Created_at</th>
                <th>Updated_at</th>
                <th>Thumbnail</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pool_set in pool_sets %}
            <tr>
                <td>{{ pool_set.id }}</td>
                <td>{{ pool_set.name }}</td>
                <td>{{ pool_set.createdAt ? pool_set.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ pool_set.updatedAt ? pool_set.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ pool_set.thumbnail }}</td>
                <td>
                    <a href="{{ path('pool_set_show', {'id': pool_set.id}) }}">show</a>
                    <a href="{{ path('pool_set_edit', {'id': pool_set.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('pool_set_new') }}">Create new</a>
{% endblock %}
